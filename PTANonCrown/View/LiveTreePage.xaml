<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PTANonCrown.LiveTreePage"
             xmlns:viewModels="clr-namespace:PTANonCrown.ViewModel"
             xmlns:models="clr-namespace:PTANonCrown.Models"
             xmlns:converter="clr-namespace:PTANonCrown.Converter"
             xmlns:behav="clr-namespace:PTANonCrown.Behaviours"
             BackgroundColor="#F0F0F0"
             Title="Live Trees">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:SpeciesConverter x:Key="SpeciesConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>

        <VerticalStackLayout VerticalOptions="Start"
                             Spacing="20"
                             Margin="10">
            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
                
                <!-- STAND/PLOT -->
                <Border Grid.Row="0"
                        BackgroundColor="LightGoldenrodYellow"
                        StrokeShape="RoundRectangle 2,2,2,2"
                        WidthRequest="200">
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Text="Stand"
                               FontAttributes="Bold"
                               Margin="10,0,0,0" />
                        <Label Text="{Binding CurrentStand.StandNumber}"
                               Margin="3,0,0,0" />
                        <Label Text="Plot"
                               FontAttributes="Bold"
                               Margin="10,0,0,0" />
                        <Label Text="{Binding CurrentPlot.PlotNumber}"
                               Margin="3,0,0,0" />
                    </HorizontalStackLayout>
                </Border>



                <Grid Grid.Row="1"
                    RowDefinitions="Auto,Auto"
                      ColumnDefinitions="200,Auto,Auto">
                    <Label Text="Include Biodiversity"
                           Grid.Row="0" Grid.Column="0"/>
                    <CheckBox x:Name="IncludeBiodiversity"
                              Grid.Row="0"
                              Grid.Column="1" />
                    
                    
                    <Label Text="Number of Trees In Plot"
                           Grid.Row="1"
                           Grid.Column="0"/>
                    <Entry Text="{Binding CurrentPlot.TreeCount, Mode=TwoWay}"
                           Grid.Row="1"
                           Grid.Column="1"
                           WidthRequest="50"></Entry>

                    <Button Text="Refresh"
                            Grid.Row="1"
                            Grid.Column="2"
                            Command="{Binding SpecifyTreeCountInPlotCommand}" />
                </Grid>
              
            </Grid>
            <CollectionView ItemsSource="{Binding CurrentPlot.PlotTreeLive, Mode=TwoWay}"
                            x:Name="collectionViewLiveTrees"
                            BackgroundColor="LightGrey"
                            HorizontalOptions="Center">
                <CollectionView.Header>
                    <Grid ColumnDefinitions="100,300,70,100,60,60,60,60"
                          BackgroundColor="DarkGray">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Tree Number"
                                   Style="{StaticResource GridHeader}" />
                            <ImageButton Source="info.png"
                                         HorizontalOptions="Center"
                                         Style="{StaticResource ImageButtonHelper}"
                                         Command="{Binding ShowHelperTextCommand}"
                                         CommandParameter="TreeNumber" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Species"
                                   Style="{StaticResource GridHeader}" />
                            <ImageButton Source="info.png"
                                         HorizontalOptions="Center"
                                         Style="{StaticResource ImageButtonHelper}"
                                         Command="{Binding ShowHelperTextCommand}"
                                         CommandParameter="Species" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2">
                            <Label Text="DBH (cm)"
                                   Style="{StaticResource GridHeader}" />
                            <ImageButton Source="info.png"
                                         HorizontalOptions="Center"
                                         Style="{StaticResource ImageButtonHelper}"
                                         Command="{Binding ShowHelperTextCommand}"
                                         CommandParameter="DBH" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="3">
                            <Label Text="Height (m)"
                                   Style="{StaticResource GridHeader}" />
                            <ImageButton Source="info.png"
                                         HorizontalOptions="Center"
                                         Style="{StaticResource ImageButtonHelper}"
                                         Command="{Binding ShowHelperTextCommand}"
                                         CommandParameter="Height" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="4">
                            <Label Text="AGS"
                                   Style="{StaticResource GridHeader}" />
                            <ImageButton Source="info.png"
                                         HorizontalOptions="Center"
                                         Style="{StaticResource ImageButtonHelper}"
                                         Command="{Binding ShowHelperTextCommand}"
                                         CommandParameter="AGS" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="5">
                            <Label Text="LIT"
                                   Style="{StaticResource GridHeader}" />
                            <ImageButton Source="info.png"
                                         HorizontalOptions="Center"
                                         Style="{StaticResource ImageButtonHelper}"
                                         Command="{Binding ShowHelperTextCommand}"
                                         CommandParameter="LIT" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="6"
                                             IsVisible="{Binding IsChecked, Source={x:Reference IncludeBiodiversity}}">
                            <Label Text="Cavity"
                                   Style="{StaticResource GridHeader}" />
                            <ImageButton Source="info.png"
                                         HorizontalOptions="Center"
                                         Style="{StaticResource ImageButtonHelper}"
                                         Command="{Binding ShowHelperTextCommand}"
                                         CommandParameter="IncludeBiodiversity" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="7"
                                             IsVisible="{Binding IsChecked, Source={x:Reference IncludeBiodiversity}}">
                            <Label Text="Diversity"
                                   Style="{StaticResource GridHeader}" />
                            <ImageButton Source="info.png"
                                         HorizontalOptions="Center"
                                         Style="{StaticResource ImageButtonHelper}"
                                         Command="{Binding ShowHelperTextCommand}"
                                         CommandParameter="IncludeBiodiversity" />
                        </VerticalStackLayout>
                    </Grid>
                </CollectionView.Header>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="100,300,70,100,60,60,60,60"
                              BackgroundColor="LightGrey">
                            <Label Grid.Column="0"
                                   Text="{Binding TreeNumber}"
                                   VerticalOptions="Start"
                                   VerticalTextAlignment="Start"
                                   HorizontalTextAlignment="Center" />

                            <VerticalStackLayout Grid.Column="1">

                                <Entry x:Name="treeShortCodeEntry"
                                       Placeholder="Species"
                                       Text="{Binding SearchSpecies}"
                                       TextChanged="Entry_TextChanged" />

                                <CollectionView ItemsSource="{Binding TreeLookupFilteredList, Mode=TwoWay}"
                                                SelectionMode="Single">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="5">
                                                <Label Text="{Binding DisplayName   }"
                                                       FontSize="14">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnSuggestionSelected"
                                                                              CommandParameter="{Binding .,
                                                            Source={RelativeSource AncestorType={x:Type models:TreeLive}}}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <!-- Picker for Tree Names
                                <Picker ItemsSource="{Binding Source={RelativeSource
                                                      AncestorType={x:Type viewModels:MainViewModel}},
                                                      Path=LookupTrees}"
                                        ItemDisplayBinding="{Binding DisplayName}"
                                        WidthRequest="200"
                                        SelectedItem="{Binding TreeLookup, Mode=TwoWay}">
                                </Picker>-->
                            </VerticalStackLayout>
                            <Entry Grid.Column="2"
                                   Text="{Binding DBH_cm}"
                                   Style="{StaticResource GridEntry}">
                                <!-- Bind the behavior -->
                                <Entry.Behaviors>
                                    <behav:EntryFormBehaviour />
                                </Entry.Behaviors>
                            </Entry>
                            <Entry Grid.Column="3"
                                   Style="{StaticResource GridEntry}"
                                   Text="{Binding Height_m}">
                                <!-- Bind the behavior -->
                                <Entry.Behaviors>
                                    <behav:EntryFormBehaviour />
                                </Entry.Behaviors>
                            </Entry>
                            <CheckBox Grid.Column="4"
                                      IsChecked="{Binding AGS}"
                                      VerticalOptions="Start" />
                            <CheckBox Grid.Column="5"
                                      IsChecked="{Binding LIT}"
                                      VerticalOptions="Start" />
                            <CheckBox Grid.Column="6"
                                      IsChecked="{Binding Cavity}"
                                      VerticalOptions="Start"
                                      IsVisible="{Binding IsChecked, Source={x:Reference IncludeBiodiversity}}" />
                            <CheckBox Grid.Column="7"
                                      IsChecked="{Binding Diversity}"
                                      VerticalOptions="Start"
                                      IsVisible="{Binding IsChecked, Source={x:Reference IncludeBiodiversity}}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>