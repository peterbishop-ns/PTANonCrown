<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PTANonCrown.LiveTreePage"
             xmlns:viewModels="clr-namespace:PTANonCrown.ViewModel"
             xmlns:behav="clr-namespace:PTANonCrown.Behaviours"
             BackgroundColor="#F0F0F0"
             Title="">
    <ScrollView >

        <VerticalStackLayout VerticalOptions="Start" >
            <Border BackgroundColor="LightGoldenrodYellow"
                    StrokeShape="RoundRectangle 2,2,2,2"
                    WidthRequest="200">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="Stand"
                           FontAttributes="Bold"
                           Margin="10,0,0,0" />
                    <Label Text="{Binding CurrentStand.StandNumber}"
                           Margin="3,0,0,0" />
                    <Label Text="Plot"
                           FontAttributes="Bold"
                           Margin="10,0,0,0" />
                    <Label Text="{Binding CurrentPlot.PlotNumber}"
                           Margin="3,0,0,0" />
                </HorizontalStackLayout>

            </Border>

            <Label Text="Live Trees"
                   Style="{StaticResource Headline}" />

            <HorizontalStackLayout Margin="0, 20, 0, 20">
            <Label Text="Include Biodiversity" />
            <CheckBox x:Name="IncludeBiodiversity" />
        </HorizontalStackLayout>
        <CollectionView ItemsSource="{Binding CurrentPlot.TreeLive}"
                        x:Name="collectionViewLiveTrees"
                        BackgroundColor="LightGrey"
                        HorizontalOptions="Center">
                <CollectionView.Header>
                    <Grid ColumnDefinitions="70,100,70,100,60,60,60,60"
                          BackgroundColor="DarkGray">
                    <Label Text="Tree Number"
                           Style="{StaticResource GridHeader}"
                           Grid.Column="0" />
                    <Label Text="Species"
                           Style="{StaticResource GridHeader}"
                           Grid.Column="1" />
                    <Label Text="DBH (cm)"
                           Style="{StaticResource GridHeader}"
                           Grid.Column="2" />
                    <Label Text="Height (m)"
                           Style="{StaticResource GridHeader}"
                           Grid.Column="3" />
                    <Label Text="AGS"
                           Style="{StaticResource GridHeader}"
                           Grid.Column="4" />
                    <Label Text="LIT"
                           Style="{StaticResource GridHeader}"
                           Grid.Column="5" />
                    <Label Text="Cavity"
                           IsVisible="{Binding IsChecked, Source={x:Reference IncludeBiodiversity}}"
                           Style="{StaticResource GridHeader}"
                           Grid.Column="6" />
                    <Label Text="Diversity"
                           IsVisible="{Binding IsChecked, Source={x:Reference IncludeBiodiversity}}"
                           Style="{StaticResource GridHeader}"
                           Grid.Column="7" />
                </Grid>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="70,100,70,100,60,60,60,60" BackgroundColor="LightGrey">
                        <Label Grid.Column="0"
                               Text="{Binding TreeNumber}" 
                                VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center"/>

                            <Entry Grid.Column="1"
                                   Text="{Binding Species}"
                                   Style="{StaticResource GridEntry}"
                                   ReturnType="Next">

                                <!-- Bind the behavior -->
                                <Entry.Behaviors>
                                    <behav:EntryFormBehaviour />
                                </Entry.Behaviors>
                            </Entry>
                            <Entry Grid.Column="2"
                                   Text="{Binding DBH_cm}"
                                   Style="{StaticResource GridEntry}">
                                <!-- Bind the behavior -->
                                <Entry.Behaviors>
                                    <behav:EntryFormBehaviour />
                                </Entry.Behaviors>
                            </Entry>
                            <Entry Grid.Column="3"
                                   Style="{StaticResource GridEntry}"
                                   Text="{Binding Height_m}">
                                <!-- Bind the behavior -->
                                <Entry.Behaviors>
                                    <behav:EntryFormBehaviour />
                                </Entry.Behaviors>
                            </Entry>
                            <CheckBox Grid.Column="4"
                                  IsChecked="{Binding AGS}" />
                        <CheckBox Grid.Column="5"
                                  IsChecked="{Binding LIT}"/>
                        <CheckBox Grid.Column="6"
                                  IsChecked="{Binding Cavity}"
                                  IsVisible="{Binding IsChecked, Source={x:Reference IncludeBiodiversity}}" />
                        <CheckBox Grid.Column="7"
                                  IsChecked="{Binding Diversity}"
                                  IsVisible="{Binding IsChecked, Source={x:Reference IncludeBiodiversity}}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
        </ScrollView>

</ContentPage>