<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PTANonCrown.LiveTreePage"
             xmlns:viewModels="clr-namespace:PTANonCrown.ViewModel"
             xmlns:models="clr-namespace:PTANonCrown.Data.Models;assembly=PTANonCrown.Data"
             xmlns:converter="clr-namespace:PTANonCrown.Converter"
             xmlns:behav="clr-namespace:PTANonCrown.Behaviours"
             BackgroundColor="#F0F0F0"
             Title="Live Trees">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:SpeciesConverter x:Key="SpeciesConverter" />
            <converter:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converter:ZeroToEmptyStringConverter x:Key="ZeroToEmptyStringConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto">
        <StackLayout Grid.Row="0"
                     Orientation="Vertical">
            <!-- Errors -->
            <Label Text="{Binding AllStandAllsErrors}"
                   Background="Pink"
                   Padding="5"
                   IsVisible="{Binding AllStandAllsErrors, Converter={StaticResource StringToVisibilityConverter}}" />

            <!-- STAND/PLOT -->
            <Border BackgroundColor="LightGoldenrodYellow"
                    StrokeShape="RoundRectangle 2,2,2,2"
                    WidthRequest="200">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="Stand"
                           FontAttributes="Bold"
                           Margin="10,0,0,0" />
                    <Label Text="{Binding CurrentStand.StandNumber}"
                           Margin="3,0,0,0" />
                    <Label Text="Plot"
                           FontAttributes="Bold"
                           Margin="10,0,0,0" />
                    <Label Text="{Binding CurrentPlot.PlotNumber}"
                           Margin="3,0,0,0" />
                </HorizontalStackLayout>
            </Border>
        </StackLayout>

                <Grid Grid.Row="2"
                        RowDefinitions="Auto,Auto"
                        ColumnSpacing="10"
                        ColumnDefinitions="200,Auto,Auto,Auto">

                    <HorizontalStackLayout Grid.Row="1"
                                            Grid.Column="0">

                        <Label Text="Number of Trees In Plot" />

                    <ImageButton Source="info.png"
                                    HorizontalOptions="Center"
                                    Style="{StaticResource ImageButtonHelper}"
                                    Command="{Binding ShowHelperTextCommand}"
                                    CommandParameter="NumberOfTreesInPlot" />
                </HorizontalStackLayout>
                <Entry Text="{Binding CurrentPlot.TreeCount, Mode=TwoWay}"
                        Style="{StaticResource EntryParent}"
                        Grid.Row="1"
                        Grid.Column="1"
                        WidthRequest="50" />

                <Button Text="Refresh"
                        Grid.Row="1"
                        Grid.Column="2"
                        Command="{Binding SpecifyTreeCountInPlotCommand}" />


            </Grid>

        
        <!-- Collection View Column Names-->
        <Grid Grid.Row="3"
              ColumnDefinitions="30,70,200,80,100,100,60,60,60,60,80,80,80,200"
              RowDefinitions="40,70"
              Padding="5">
            <BoxView Grid.Row="1"
                     Grid.ColumnSpan="9"
                     BackgroundColor="LightGray" />
            <BoxView Grid.Row="0"
                     Grid.Column="9"
                     Grid.ColumnSpan="3"
                     BackgroundColor="LightGray" />

            <BoxView Grid.Row="1"
                     Grid.Column="9"
                     Grid.ColumnSpan="3"
                     BackgroundColor="LightSkyBlue" />

            <BoxView Grid.Row="1"
                     Grid.Column="12"
                     Grid.ColumnSpan="3"
                     BackgroundColor="LightGreen" />

            <VerticalStackLayout Grid.Column="1"
                                 Grid.Row="1">
                <Label Text="Tree #"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeNumber" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="2"
                                 Grid.Row="1">
                <Label Text="Species"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeSpecies" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="3"
                                 Grid.Row="1">
                <Label Text="DBH (cm)"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeDBH" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="4"
                                 Grid.Row="1">
                <Label Text="Height (m)"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeHeight" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="5"
                                 Grid.Row="1">
                <Label Text="Height:Diam (m/cm)"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="HeightToDiameterRatio" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="6"
                                 Grid.Row="1">
                <Label Text="AGS"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeAGS" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="7"
                                 Grid.Row="1">
                <Label Text="LIT"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeLIT" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="8"
                                 Grid.Row="1">
                <Label Text="LT"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeLT" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="9"
                                 Grid.Row="1">
                <Label Text="Cavity"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeCavity" />
            </VerticalStackLayout>

            <HorizontalStackLayout Grid.Column="9"
                                   Grid.ColumnSpan="3"
                                   Grid.Row="0"
                                   HorizontalOptions="Center">
                <Label Text="Include Biodiversity"
                       FontAttributes="Bold"
                       Grid.Row="0"
                       VerticalOptions="Center"
                       Grid.Column="0" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Style="{StaticResource ImageButtonHelper}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="IncludeBiodiversity" />
                <CheckBox x:Name="IncludeBiodiversity"
                          IsChecked="{Binding IsCheckedBiodiversity, Mode=TwoWay}"
                          Grid.Row="0"
                          Grid.Column="1" />
            </HorizontalStackLayout>

            <VerticalStackLayout Grid.Column="10"
                                 Grid.Row="1">
                <Label Text="Diversity"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeDiversity" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="11"
                                 Grid.Row="1"
                                 HorizontalOptions="Center">
                <Label Text="Mast"
                       FontAttributes="Bold" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeMast" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="12"
                                 Grid.Row="1"
                                 Grid.ColumnSpan="2"
                                 HorizontalOptions="Center"
                                 IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainViewModel}},
Path=CurrentPlot.IsPlanted}">
                <Label Text="Planted"
                       FontAttributes="Bold" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelper}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreePlantedType" />
            </VerticalStackLayout>
        </Grid>
        <!-- CollectionView -->
        <CollectionView Grid.Row="4"
                        x:Name="TreeCollectionView"
                        ItemsSource="{Binding TreeRows}"
                        ItemsUpdatingScrollMode="KeepScrollOffset"
                        VerticalOptions="FillAndExpand"
                        SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="45,70,200,80,100,100,60,60,60,60,80,80,270"
                          Padding="5"
                          BackgroundColor="WhiteSmoke">

                        <!-- Delete -->
                        <Button Grid.Column="0"
                                Text="x"
                                MaximumHeightRequest="50"
                                TextColor="Red"
                                VerticalOptions="Start"
                                FontSize="24"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainViewModel}},
                                        Path=DeleteLiveTreeCommand}"
                                CommandParameter="{Binding Model}" />

                        <!-- Tree Number -->
                        <Label Grid.Column="1"
                               Text="{Binding TreeNumber}"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0"
                               VerticalOptions="Start" />

                        <!-- Species Entry + Picker -->
                        <VerticalStackLayout Grid.Column="2"
                                             HeightRequest="50"
                                               Spacing="2">
                            <!-- Searchable Entry -->
                            <Entry Text="{Binding SpeciesSearchText}"
                                   x:Name="TreeSpeciesEntry"
                                   AutomationId="SpeciesEntry"
                                   VerticalOptions="Center"
                                   Completed="SpeciesEntry_Completed">
                                <Entry.Behaviors>
                                    <behav:FocusBehavior IsFocused="{Binding FocusSpecies}" />
                                        <behav:EntryFormBehaviour />
                                </Entry.Behaviors>
                            </Entry>

                            <!-- Auto-complete dropdown -->
                            <CollectionView ItemsSource="{Binding FilteredSpecies}"
                                            HeightRequest="20"
                                            SelectionMode="Single">

                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Label Text="{Binding}">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding SelectSpeciesCommand,
                                  Source={RelativeSource AncestorType={x:Type viewModels:TreeLiveViewModel}}}"
                                                                      CommandParameter="{Binding .}" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>

                            </CollectionView>
                        </VerticalStackLayout>

                        <!-- DBH -->
                        <Entry Grid.Column="3"
                               Text="{Binding DBH, Mode=TwoWay}"
                               MaximumHeightRequest="30"
                               Keyboard="Numeric"
                               AutomationId="DBHEntry"
                               VerticalOptions="Start"
                               HorizontalOptions="Center">
                            <Entry.Behaviors>
                                <behav:EntryFormBehaviour />
                            </Entry.Behaviors>
                        </Entry>

                        <!-- Height -->
                        <Entry Grid.Column="4"
                               Text="{Binding Height, Mode=TwoWay}"
                               MaximumHeightRequest="30"
                               Keyboard="Numeric"
                               AutomationId="HeightEntry"
                               VerticalOptions="Start"
                               HorizontalOptions="Center">
                            <Entry.Behaviors>
                                <behav:EntryFormBehaviour />
                            </Entry.Behaviors>
                        </Entry>

                        <!-- Height-to-Diameter Ratio -->
                        <Label Grid.Column="5"
                               Text="{Binding Model.HeightToDiameter, StringFormat='{}{0:F2}'}"
                               HorizontalOptions="Center"
                               Margin="0,5,0,0"
                               VerticalOptions="Start"
                               TextColor="Gray"
                               FontAttributes="Italic" />



                        <CheckBox IsChecked="{Binding AGS}"
                                  Grid.Column="6"
                                  VerticalOptions="Center" />  
                        
                        <CheckBox IsChecked="{Binding LT}"
                                  Grid.Column="7"
                                  VerticalOptions="Center" />

                        <CheckBox IsChecked="{Binding LIT}"
                                  Grid.Column="8"
                                  VerticalOptions="Center" />

                        <CheckBox IsChecked="{Binding Cavity}"
                                  Grid.Column="9"
                                  VerticalOptions="Center" />
                      <CheckBox IsChecked="{Binding Diversity}"
                                  Grid.Column="10"
                                  VerticalOptions="Center" />               
                        
                        <CheckBox IsChecked="{Binding Mast}"
                                  Grid.Column="11"
                                  VerticalOptions="Center" />


                        <HorizontalStackLayout Grid.Column="12">
                            <RadioButton Content="Seeded"
                                         Value="Seeded"
                                         GroupName="{x:Reference TreeCollectionView}"
                                         IsChecked="{Binding PlantedMethod, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Seeded}" />

                            <RadioButton Content="Planted"
                                         Value="Planted"
                                         GroupName="{x:Reference TreeCollectionView}"
                                         IsChecked="{Binding PlantedMethod, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Planted}" />

                            <RadioButton Content="Natural"
                                         Value="Natural"
                                         GroupName="{x:Reference TreeCollectionView}"
                                         IsChecked="{Binding PlantedMethod, Converter={StaticResource EnumEqualsConverter}, ConverterParameter=Natural}" />
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
        <Button Grid.Row="5"
                Text="+"
                TextColor="Green"
                FontSize="24"
                WidthRequest="40"
                HeightRequest="40"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                Command="{Binding AddTreeCommand}" />
        <!-- Add Tree Button -->
        
    </Grid>
</ContentPage>
