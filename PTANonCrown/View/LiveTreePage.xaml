<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PTANonCrown.LiveTreePage"
             xmlns:viewModels="clr-namespace:PTANonCrown.ViewModel"
             xmlns:converter="clr-namespace:PTANonCrown.Converter"
             BackgroundColor="#F0F0F0"
             Title="Live Trees">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:SpeciesConverter x:Key="SpeciesConverter" />
            <converter:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converter:ZeroToEmptyStringConverter x:Key="ZeroToEmptyStringConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto">
        <StackLayout Grid.Row="0"
                     Orientation="Vertical">
            <!-- Errors -->
            <Label Text="{Binding AllStandAllsErrors}"
                   Background="Pink"
                   Padding="5"
                   IsVisible="{Binding AllStandAllsErrors, Converter={StaticResource StringToVisibilityConverter}}" />

            <!-- STAND/PLOT -->
            <Border BackgroundColor="LightGoldenrodYellow"
                    StrokeShape="RoundRectangle 2,2,2,2"
                    WidthRequest="200">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="Stand"
                           FontAttributes="Bold"
                           Margin="10,0,0,0" />
                    <Label Text="{Binding CurrentStand.StandNumber}"
                           Margin="3,0,0,0" />
                    <Label Text="Plot"
                           FontAttributes="Bold"
                           Margin="10,0,0,0" />
                    <Label Text="{Binding CurrentPlot.PlotNumber}"
                           Margin="3,0,0,0" />
                </HorizontalStackLayout>
            </Border>
        </StackLayout>

                <Grid Grid.Row="2"
                        RowDefinitions="Auto,Auto"
                        ColumnSpacing="10"
                        ColumnDefinitions="200,Auto,Auto,Auto">

                    <HorizontalStackLayout Grid.Row="1"
                                            Grid.Column="0">

                        <Label Text="Number of Trees In Plot" />

                    <ImageButton Source="info.png"
                                    HorizontalOptions="Center"
                                    Style="{StaticResource ImageButtonHelper}"
                                    Command="{Binding ShowHelperTextCommand}"
                                    CommandParameter="NumberOfTreesInPlot" />
                </HorizontalStackLayout>
                <Entry Text="{Binding CurrentPlot.TreeCount, Mode=TwoWay}"
                        Style="{StaticResource EntryParent}"
                        Grid.Row="1"
                        Grid.Column="1"
                        WidthRequest="50" />

                <Button Text="Refresh"
                        Grid.Row="1"
                        Grid.Column="2"
                        Command="{Binding SpecifyTreeCountInPlotCommand}" />


            </Grid>

                    <!-- CollectionView -->
        <CollectionView Grid.Row="3"
                        x:Name="TreeCollectionView"
                        ItemsSource="{Binding TreeRows}"
                        
                        ItemsUpdatingScrollMode="KeepLastItemInView"
                        VerticalOptions="FillAndExpand"
                        SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:TreeLiveViewModel">
                    <Grid ColumnDefinitions="45,70,350,80,100,100,60,60,60,60,80,80,270"
                          Padding="5"
                          BackgroundColor="WhiteSmoke">

                        <!-- Delete -->
                        <Button Grid.Column="0"
                                Text="x"
                                TextColor="Red"
                                FontSize="24" />

                        <!-- Tree Number -->
                        <Label Grid.Column="1"
                               Text="{Binding TreeNumber}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />

                        <!-- Species Entry + Picker -->
                        <HorizontalStackLayout Grid.Column="2"
                                               Spacing="2">
                            <Entry Text="{Binding SearchText, Mode=TwoWay}"
                                   WidthRequest="60" />
                            <Picker ItemsSource="{Binding LookupTrees}"
                                    SelectedItem="{Binding TreeSpecies, Mode=TwoWay}"
                                    ItemDisplayBinding="{Binding Name}"
                                    WidthRequest="250" />
                        </HorizontalStackLayout>

                        <!-- DBH -->
                        <Entry Grid.Column="3"
                               Text="{Binding DBH, Mode=TwoWay}"
                               Keyboard="Numeric"
                               HorizontalOptions="Center" />

                        <!-- Height -->
                        <Entry Grid.Column="4"
                               Text="{Binding Height, Mode=TwoWay}"
                               Keyboard="Numeric"
                               HorizontalOptions="Center" />

                        <!-- Height-to-Diameter Ratio -->
                        <Label Grid.Column="5"
                               Text="{Binding Model.HeightToDiameter, StringFormat='{}{0:F2}'}"
                               HorizontalOptions="Center"
                               TextColor="Gray"
                               FontAttributes="Italic" />

                        <!-- Additional columns can go here -->
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
        <Button Grid.Row="4"
                Text="+"
                TextColor="Green"
                FontSize="24"
                WidthRequest="40"
                HeightRequest="40"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                Command="{Binding AddTreeCommand}" />
        <!-- Add Tree Button -->
        
    </Grid>
</ContentPage>
