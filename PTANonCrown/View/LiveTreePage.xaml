<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PTANonCrown.LiveTreePage"
             x:Name="LiveTreePageRoot"
             xmlns:viewModels="clr-namespace:PTANonCrown.ViewModel"
             xmlns:models="clr-namespace:PTANonCrown.Data.Models;assembly=PTANonCrown.Data"
             xmlns:converter="clr-namespace:PTANonCrown.Converter"
             xmlns:behav="clr-namespace:PTANonCrown.Behaviours"
             BackgroundColor="#F0F0F0"
             Title="Live Trees">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:SpeciesConverter x:Key="SpeciesConverter" />
            <converter:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converter:ZeroToEmptyStringConverter x:Key="ZeroToEmptyStringConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto">

        <!-- HEADER: Errors + Stand/Plot -->
        <StackLayout Grid.Row="0"
                     Orientation="Vertical">
            <Label Text="{Binding AllStandAllsErrors}"
                   Background="Pink"
                   Padding="5"
                   IsVisible="{Binding AllStandAllsErrors, Converter={StaticResource StringToVisibilityConverter}}" />

            <Border BackgroundColor="LightGoldenrodYellow"
                    StrokeShape="RoundRectangle 2,2,2,2"
                    WidthRequest="200">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="Stand"
                           FontAttributes="Bold"
                           Margin="10,0,0,0" />
                    <Label Text="{Binding CurrentStand.StandNumber}"
                           Margin="3,0,0,0" />
                    <Label Text="Plot"
                           FontAttributes="Bold"
                           Margin="10,0,0,0" />
                    <Label Text="{Binding CurrentPlot.PlotNumber}"
                           Margin="3,0,0,0" />
                </HorizontalStackLayout>
            </Border>
        </StackLayout>

        <!-- TREE COUNT INPUT -->
        <Grid Grid.Row="2"
              RowDefinitions="Auto,Auto"
              ColumnDefinitions="200,Auto,Auto,Auto"
              ColumnSpacing="10">
            <HorizontalStackLayout Grid.Row="1"
                                   Grid.Column="0">
                <Label Text="Number of Trees In Plot" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelper}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="NumberOfTreesInPlot" />
            </HorizontalStackLayout>

            <Entry Text="{Binding CurrentPlot.TreeCount, Mode=TwoWay}"
                   Style="{StaticResource EntryParent}"
                   Grid.Row="1"
                   Grid.Column="1"
                   WidthRequest="50" />

            <Button Text="Refresh"
                    Grid.Row="1"
                    Grid.Column="2"
                    Command="{Binding SpecifyTreeCountInPlotCommand}" />
        </Grid>

        <!-- COLUMN HEADERS -->
        <Grid Grid.Row="3"
              ColumnDefinitions="30,70,200,80,100,100,60,60,60,60,80,80,80,200"
              RowDefinitions="40,70"
              Padding="5">
            <!-- Background Boxes -->
            <BoxView Grid.Row="1"
                     Grid.ColumnSpan="9"
                     BackgroundColor="LightGray" />
            <BoxView Grid.Row="0"
                     Grid.Column="9"
                     Grid.ColumnSpan="3"
                     BackgroundColor="LightGray" />
            <BoxView Grid.Row="1"
                     Grid.Column="9"
                     Grid.ColumnSpan="3"
                     BackgroundColor="LightSkyBlue" />
            <BoxView Grid.Row="1"
                     Grid.Column="12"
                     Grid.ColumnSpan="3"
                     BackgroundColor="LightGreen" />

            <!-- Individual Column Headers -->
            <VerticalStackLayout Grid.Column="1"
                                 Grid.Row="1">
                <Label Text="Tree #"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeNumber" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2"
                                 Grid.Row="1">
                <Label Text="Species"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeSpecies" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="3"
                                 Grid.Row="1">
                <Label Text="DBH (cm)"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeDBH" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="4"
                                 Grid.Row="1">
                <Label Text="Height (m)"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeHeight" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="5"
                                 Grid.Row="1">
                <Label Text="Height:Diam (m/cm)"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="HeightToDiameterRatio" />
            </VerticalStackLayout>

            <!-- AGS / LIT / LT -->
            <VerticalStackLayout Grid.Column="6"
                                 Grid.Row="1">
                <Label Text="AGS"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeAGS" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="7"
                                 Grid.Row="1">
                <Label Text="LIT"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeLIT" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="8"
                                 Grid.Row="1">
                <Label Text="LT"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeLT" />
            </VerticalStackLayout>

            <!-- Include Biodiversity Header -->
            <HorizontalStackLayout Grid.Column="9"
                                   Grid.ColumnSpan="3"
                                   Grid.Row="0"
                                   HorizontalOptions="Center">
                <Label Text="Include Biodiversity"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       Grid.Column="0" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Style="{StaticResource ImageButtonHelper}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="IncludeBiodiversity" />
                <CheckBox x:Name="IncludeBiodiversity"
                          IsChecked="{Binding IsCheckedBiodiversity}"
                          Grid.Row="0"
                          Grid.Column="1" />
            </HorizontalStackLayout>

            <!-- Diversity / Mast / Planted -->
            <VerticalStackLayout Grid.Column="10"
                                 Grid.Row="1">
                <Label Text="Diversity"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeDiversity" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="11"
                                 Grid.Row="1"
                                 HorizontalOptions="Center">
                <Label Text="Mast"
                       FontAttributes="Bold" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelperVertical}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreeMast" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="12"
                                 Grid.Row="1"
                                 Grid.ColumnSpan="2"
                                 HorizontalOptions="Center"
                                 IsVisible="{Binding CurrentPlot.IsPlanted}">
                <Label Text="Planted"
                       FontAttributes="Bold" />
                <ImageButton Source="info.png"
                             HorizontalOptions="Center"
                             Style="{StaticResource ImageButtonHelper}"
                             Command="{Binding ShowHelperTextCommand}"
                             CommandParameter="LivingTreePlantedType" />
            </VerticalStackLayout>
        </Grid>

        <!-- TREE COLLECTION -->
        <CollectionView Grid.Row="4"
                        x:Name="TreeCollectionView"
                        ItemsSource="{Binding TreeRows}"
                        ItemsUpdatingScrollMode="KeepScrollOffset"
                        VerticalOptions="FillAndExpand"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:TreeLiveViewModel">
                    <Grid ColumnDefinitions="45,70,200,80,100,100,60,60,60,60,80,80,270"
                          Padding="5"
                          BackgroundColor="WhiteSmoke">

                      

                        <!-- TREE NUMBER -->
                        <Label Grid.Column="1"
                               Text="{Binding TreeNumber}"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0" />
                        
                        <!-- SPECIES ENTRY + AUTOCOMPLETE -->
                        <Grid Grid.Column="2"
                              VerticalOptions="Start"
                              HeightRequest="50">
                            <Entry Text="{Binding SpeciesSearchText}"
                                   Focused="Entry_Focused"
                                   VerticalOptions="Start"
                                   VerticalTextAlignment="Start"
                                   HeightRequest="50"
                                   Completed="SpeciesEntry_Completed">
                                <Entry.Behaviors>
                                    <behav:EntryFormBehaviour />
                                </Entry.Behaviors>
                            </Entry>


                            <CollectionView ItemsSource="{Binding FilteredSpecies}"
                                            HeightRequest="25"
                                            WidthRequest="150"
                                            HorizontalOptions="Start"
                                            VerticalOptions="End"
                                            SelectionMode="Single">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Label Text="{Binding .}"
                                               Margin="5,0,0,0"
                                               VerticalTextAlignment="End"
                                               TextColor="Grey">
                                            <!-- or Name, or both -->
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding SelectSpeciesCommand,
      Source={RelativeSource AncestorType={x:Type viewModels:TreeLiveViewModel}}}"
                                                                      CommandParameter="{Binding .}" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>

                        <!-- DBH / Height -->
                        <Entry Grid.Column="3"
                               Text="{Binding DBH, Mode=TwoWay}"
                               Keyboard="Numeric"
                               VerticalOptions="Start"
                               Focused="Entry_Focused"
                               HeightRequest="50">
                            <Entry.Behaviors>
                                <behav:EntryFormBehaviour />
                            </Entry.Behaviors>
                        </Entry>
                        <Entry Grid.Column="4"
                               Text="{Binding Height, Mode=TwoWay}"
                               Keyboard="Numeric"
                               Focused="Entry_Focused"
                               VerticalOptions="Start"
                               HeightRequest="50">
                            <Entry.Behaviors>
                                <behav:EntryFormBehaviour />
                            </Entry.Behaviors>
                        </Entry>

                        <!-- Height-to-Diameter -->
                        <Label Grid.Column="5"
                               Text="{Binding Model.HeightToDiameter, StringFormat='{}{0:F2}'}"
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center"
                               HorizontalOptions="Center"
                               HeightRequest="50"
                               TextColor="Gray"
                               FontAttributes="Italic" />

                        <!-- AGS / LIT / LT -->
                        <CheckBox Grid.Column="6"
                                  IsChecked="{Binding AGS}"
                                  VerticalOptions="Start" />
                        <CheckBox Grid.Column="7"
                                  IsChecked="{Binding LIT}"
                                  IsEnabled="False"
                                  VerticalOptions="Start" />
                        <CheckBox Grid.Column="8"
                                  IsChecked="{Binding LT}"
                                  IsEnabled="False"
                                  VerticalOptions="Start" />

                        <!-- Cavity / Diversity / Mast -->
                        <CheckBox Grid.Column="9"
                                  IsChecked="{Binding Cavity}"
                                  VerticalOptions="Start"
                                  IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsCheckedBiodiversity}" />
                        <CheckBox Grid.Column="10"
                                  IsChecked="{Binding Diversity}"
                                  VerticalOptions="Start"
                                  IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsCheckedBiodiversity}" />
                        <CheckBox Grid.Column="11"
                                  IsChecked="{Binding Mast}"
                                  VerticalOptions="Start"
                                  IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsCheckedBiodiversity}" />

                        <!-- PLANTED RADIO -->
                        <HorizontalStackLayout Grid.Column="12"
                                               Spacing="10"
                                               HorizontalOptions="CenterAndExpand"
                                               IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CurrentPlot.IsPlanted}"
                                               RadioButtonGroup.GroupName="{Binding TreeNumber}"
                                               RadioButtonGroup.SelectedValue="{Binding PlantedMethod, Mode=TwoWay}">
                            <RadioButton Content="n/a"
                                         Value="{x:Static models:PlantedMethod.NotPlanted}" />
                            <RadioButton Content="In Situ"
                                         Value="{x:Static models:PlantedMethod.InSitu}" />
                            <RadioButton Content="Ex Situ"
                                         Value="{x:Static models:PlantedMethod.ExSitu}" />
                        </HorizontalStackLayout>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- ADD TREE BUTTON -->
        <Button Grid.Row="5"
                Text="+"
                TextColor="Green"
                FontSize="24"
                WidthRequest="40"
                HeightRequest="40"
                HorizontalOptions="Start"
                Command="{Binding AddTreeCommand}" />
    </Grid>
</ContentPage>
