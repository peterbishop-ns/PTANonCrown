<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:PTANonCrown"
             x:Class="PTANonCrown.PlotPage"
             xmlns:mvvm="http://schemas.microsoft.com/xaml/behaviors"
             BackgroundColor="#F0F0F0"
             xmlns:viewModels="clr-namespace:PTANonCrown.ViewModel"
             Title="">
        <ScrollView>

        <VerticalStackLayout>
            <Label Text="Plot"
                   Style="{StaticResource Headline}" />
            <Border HorizontalOptions="Start"
                    BackgroundColor="LightGray"
                    Margin="20,10,0,0">
                <VerticalStackLayout>
                    <Label Text="Select Plot"
                           Margin="0,0,0,0"
                           Style="{StaticResource LabelPlot}" />
                        
                    <HorizontalStackLayout HorizontalOptions="Start" VerticalOptions="Center">
                        <!-- Iterate over the observable collection of buttons -->
                        <CollectionView ItemsSource="{Binding CurrentStand.Plots}"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Margin="0,0,0,10"
                                        WidthRequest="300">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical"
                                                 Span="4" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <!-- Create a button for each plot in the collection     BackgroundColor="{Binding ., 
Converter={StaticResource PlotToBackgroundColorConverter}}"-->
                                    <Button Text="{Binding PlotNumber}"
                                            WidthRequest="75"
                                            HeightRequest="25"
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center"
                                            Margin="0,10,0,10"
                                            Command="{Binding Source={RelativeSource 
                                            AncestorType={x:Type viewModels:MainViewModel}}, 
                                            Path=SetCurrentPlotCommand}"
                                            CommandParameter="{Binding .}"/>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                       
                    </HorizontalStackLayout>
                    <Button Text=" + "
                            Command="{Binding NewPlotCommand}"
                            HorizontalOptions="Start"
                            WidthRequest="50"/>
                    <HorizontalStackLayout Margin="0,20,0,0">
                        <!--  0  -->
                        <VerticalStackLayout>
                            <Label Text="Plot Number"
                                   Style="{StaticResource LabelPlot}" />
                            <Entry Text="{Binding CurrentPlot.PlotNumber, Mode=TwoWay}"
                                   Margin="20,0,0,0"
                                   WidthRequest="100">
                               
                            </Entry>
                        </VerticalStackLayout>
                       
                        
                    </HorizontalStackLayout>
                </VerticalStackLayout>

            </Border>


            <ScrollView>
                <VerticalStackLayout Padding="20"
                                     Spacing="5">
                    <VerticalStackLayout>
                        <Label Text="Regeneration"
                               Style="{StaticResource SubHeadline}" />
                        <!-- REGEN BORDER -->
                        <Border>
                            <VerticalStackLayout>

                                <!-- TITLE Regen Toggles x3 -->
                                <HorizontalStackLayout>
                                    <Label Text="Height (2 â€“ 6m)"
                                           Style="{StaticResource LabelPlot}" />
                                    <ImageButton Source="info.png"
                                                 Style="{StaticResource ImageButtonHelper}"
                                                 Margin="10,0,0,0"
                                                 Command="{Binding ShowHelperTextCommand}"
                                                 CommandParameter="RegenHeightGeneral" />

                                </HorizontalStackLayout>

                                <!--  Regen Toggles x3 -->
                                <Border>

                                    <VerticalStackLayout  Grid.Row="2">
                                        <HorizontalStackLayout>

                                            <Label Text="Softwood"
                                                   Style="{StaticResource LabelSubheading}" />
                                            <ImageButton Source="info.png"
                                                         Style="{StaticResource ImageButtonHelper}"
                                                         Margin="10,0,0,0"
                                                         Command="{Binding ShowHelperTextCommand}"
                                                         CommandParameter="SWLITRegen" />
                                            <Switch IsToggled="{Binding CurrentPlot.RegenHeightSWLIT}" />

                                        </HorizontalStackLayout>

                                        <!--  3  -->
                                        <HorizontalStackLayout>

                                            <Label Text="Hardwood"
                                                   Style="{StaticResource LabelSubheading}" />
                                            <ImageButton Source="info.png"
                                                         Style="{StaticResource ImageButtonHelper}"
                                                         Margin="10,0,0,0"
                                                         Command="{Binding ShowHelperTextCommand}"
                                                         CommandParameter="HWLITRegen" />
                                            <Switch IsToggled="{Binding CurrentPlot.RegenHeightHWLIT}" />
                                        </HorizontalStackLayout>

                                        <!--  1  -->
                                        <HorizontalStackLayout>
                                            <Label Text="Beech &gt;25%"
                                                   Style="{StaticResource LabelSubheading}" />
                                            <ImageButton Source="info.png"
                                                         Style="{StaticResource ImageButtonHelper}"
                                                         Margin="10,0,0,0"
                                                         Command="{Binding ShowHelperTextCommand}"
                                                         CommandParameter="BeechRegeneration25perc" />
                                            <Switch IsToggled="{Binding CurrentPlot.StockingBeechRegeneration}"
                                                    Style="{StaticResource EntryPlot}" />

                                        </HorizontalStackLayout>


                                    </VerticalStackLayout>

                                </Border>

                                <!-- TITLE Stocking -->
                                <HorizontalStackLayout>
                                    <Label Text="Stocking (%) at 2.44 m"
                                           Style="{StaticResource LabelStand}" />
                                    <ImageButton Source="info.png"
                                                 Style="{StaticResource ImageButtonHelper}"
                                                 Margin="10,0,0,0"
                                                 Command="{Binding ShowHelperTextCommand}"
                                                 CommandParameter="RegenGeneral" />
                                </HorizontalStackLayout>
                                <Border>

                                    <VerticalStackLayout>

                                        <HorizontalStackLayout>
                                            <Label Text="All Commercial Species"
                                                   WidthRequest="150"
                                                   Style="{StaticResource LabelSubheading}"
                                                   Grid.Row="4" />
                                            <ImageButton Source="info.png"
                                                         Style="{StaticResource ImageButtonHelper}"
                                                         Margin="10,0,0,0"
                                                         Command="{Binding ShowHelperTextCommand}"
                                                         CommandParameter="StockingRegenCommercialSpecies" />
                                            <Picker Background="White"
                                                    WidthRequest="70"
                                                    HorizontalOptions="Start">
                                                <Picker.Items>
                                                    <x:String>0</x:String>
                                                    <x:String>10</x:String>
                                                    <x:String>20</x:String>
                                                    <x:String>30</x:String>
                                                </Picker.Items>
                                            </Picker>
                                        </HorizontalStackLayout>

                                        <!--  4  -->
                                        <HorizontalStackLayout>
                                            <!--  RegenStockingLITSpecies  -->
                                            <Label Text="LIT Species"
                                                   WidthRequest="150"
                                                   Style="{StaticResource LabelSubheading}"
                                                   Grid.Row="5" />
                                            <ImageButton Source="info.png"
                                                         Style="{StaticResource ImageButtonHelper}"
                                                         Margin="10,0,0,0"
                                                         Command="{Binding ShowHelperTextCommand}"
                                                         CommandParameter="StockingRegenLITSpecies" />
                                            <Picker Background="White"
                                                    WidthRequest="70"
                                                    HorizontalOptions="Start">
                                                <Picker.Items>
                                                    <x:String>0</x:String>
                                                    <x:String>10</x:String>
                                                    <x:String>20</x:String>
                                                    <x:String>30</x:String>
                                                </Picker.Items>
                                            </Picker>

                                        </HorizontalStackLayout>



                                    </VerticalStackLayout>

                                </Border>
                            </VerticalStackLayout>


                        </Border>

                    </VerticalStackLayout>






                    <VerticalStackLayout>
                        <Label Text="Forest Structure"
                               Style="{StaticResource SubHeadline}" />
                        
                        <Border>
                            <VerticalStackLayout>

                                <VerticalStackLayout  Grid.Row="4">
                                    <!--  7  -->
                                    <HorizontalStackLayout>
                                        <Label Text="LIT Seed Tree Stocking (%)"
                                               Style="{StaticResource LabelSubheading}" />
                                        <ImageButton Source="info.png"
                                                     Style="{StaticResource ImageButtonHelper}"
                                                     Margin="10,0,0,0"
                                                     Command="{Binding ShowHelperTextCommand}"
                                                     CommandParameter="StockingLITSeedTree" />
                                    </HorizontalStackLayout>

                                    <Picker Background="White"
                                            WidthRequest="70"
                                            HorizontalOptions="Start">
                                        <Picker.Items>
                                            <x:String>0</x:String>
                                            <x:String>10</x:String>
                                            <x:String>20</x:String>
                                            <x:String>30</x:String>
                                        </Picker.Items>
                                    </Picker>

                                </VerticalStackLayout>
                                <HorizontalStackLayout>
                                    <!--  6  -->
                                    <HorizontalStackLayout>
                                        <Label Text="Blowdown (%)"
                                               Style="{StaticResource LabelSubheading}"
                                               Grid.Row="6" />
                                        <ImageButton Source="info.png"
                                                     Style="{StaticResource ImageButtonHelper}"
                                                     Margin="10,0,0,0"
                                                     Command="{Binding ShowHelperTextCommand}"
                                                     CommandParameter="Blowdown" />
                                    </HorizontalStackLayout>
                                 
                                    <Picker Background="White"
                                            WidthRequest="70"
                                            HorizontalOptions="Start">
                                        <Picker.Items>
                                            <x:String>0</x:String>
                                            <x:String>10</x:String>
                                            <x:String>20</x:String>
                                            <x:String>30</x:String>
                                        </Picker.Items>
                                    </Picker>

                                </HorizontalStackLayout>
                                <!--  UnderstoryStrata  -->
                                <HorizontalStackLayout>
                                    <Label Text="Understory Strata (%)"
                                           Style="{StaticResource LabelSubheading}" />
                                    <ImageButton Source="info.png"
                                                 Style="{StaticResource ImageButtonHelper}"
                                                 Margin="10,0,0,0"
                                                 Command="{Binding ShowHelperTextCommand}"
                                                 CommandParameter="UnderstoryStrata" />
                                    <Picker Background="White"
                                            WidthRequest="70"
                                            HorizontalOptions="Start">
                                        <Picker.Items>
                                            <x:String>0</x:String>
                                            <x:String>10</x:String>
                                            <x:String>20</x:String>
                                            <x:String>30</x:String>
                                        </Picker.Items>
                                    </Picker>


                                </HorizontalStackLayout>

                                <!--  8  -->
                                <HorizontalStackLayout>
                                    <Label Text="Uneven Aged"
                                           Style="{StaticResource LabelSubheading}" />
                                    <ImageButton Source="info.png"
                                                 Style="{StaticResource ImageButtonHelper}"
                                                 Margin="10,0,0,0"
                                                 Command="{Binding ShowHelperTextCommand}"
                                                 CommandParameter="UnevenAged" />
                                    <Switch IsToggled="{Binding CurrentPlot.UnevenAged}"
                                            Style="{StaticResource LabelSubheading}"
                                            Grid.Column="1" />
                                </HorizontalStackLayout>


                                <!--  9  -->
                                <HorizontalStackLayout>

                                    <Label Text="One Cohort Senescent"
                                           Style="{StaticResource LabelSubheading}" />
                                    <ImageButton Source="info.png"
                                                 Style="{StaticResource ImageButtonHelper}"
                                                 Margin="10,0,0,0"
                                                 Command="{Binding ShowHelperTextCommand}"
                                                 CommandParameter="OneCohortSenescent" />
                                    <Switch IsToggled="{Binding CurrentPlot.OneCohortSenescent}"
                                            Grid.Column="1" />
                                </HorizontalStackLayout>

                                
                               

                                <!--  11  -->
                                <HorizontalStackLayout>
                                    
                                <Label Text="Understory Dominated By"
                                       Style="{StaticResource LabelPlot}"
                                       Grid.Row="11" />
                                <ImageButton Source="info.png"
                                             Style="{StaticResource ImageButtonHelper}"
                                             Margin="10,0,0,0"
                                             Command="{Binding ShowHelperTextCommand}"
                                             CommandParameter="UnderStoryDominatedBy" />
                                </HorizontalStackLayout>

                                <Border>
                                    <HorizontalStackLayout>

                                        <RadioButton Content="Trees"
                                                     GroupName="UnderstoryDominatedGroup"
                                                     IsChecked="{Binding CurrentPlot.IsTreesSelected}" />

                                        <RadioButton Content="Woody Shrubs"
                                                     GroupName="UnderstoryDominatedGroup"
                                                     IsChecked="{Binding CurrentPlot.IsWoodyShrubsSelected}" />
                                    </HorizontalStackLayout>
                                </Border>
                               


                            </VerticalStackLayout>

                        </Border>

                    </VerticalStackLayout>






                </VerticalStackLayout>

            </ScrollView>


        </VerticalStackLayout>
    </ScrollView>


</ContentPage>