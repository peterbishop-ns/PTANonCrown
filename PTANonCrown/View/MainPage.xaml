             x:Class="PTANonCrown.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
         

            <Label
                Text="Pre-Treatment Assessment"
                Style="{StaticResource Headline}"
