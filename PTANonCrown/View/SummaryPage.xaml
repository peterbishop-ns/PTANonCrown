<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PTANonCrown.SummaryPage"
             xmlns:viewModels="clr-namespace:PTANonCrown.ViewModel"
             BackgroundColor="#F0F0F0"
             Title="Summary">

    <Grid RowDefinitions="Auto,Auto,Auto"
          ColumnDefinitions="Auto,Auto">
        <HorizontalStackLayout Grid.Row="0"
                               Grid.Column="0"
                               Margin="20,0,0,0">
            <Button Text="Stand"
                    WidthRequest="85"
                    HeightRequest="45"
                    Margin="0,40,0,0"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    BackgroundColor="LightGoldenrodYellow"
                    Command="{Binding SetStandOnlyCommand}" />

            <CollectionView ItemsSource="{Binding CurrentStand.Plots}"
                            HorizontalOptions="Start"
                            VerticalOptions="Start"
                            Margin="0,0,0,0"
                            WidthRequest="400">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     VerticalItemSpacing="0"
                                     Span="4" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Create a button for each plot in the collection     BackgroundColor="{Binding .,
Converter={StaticResource PlotToBackgroundColorConverter}}"-->
                        <Button Text="{Binding PlotNumber, StringFormat='Plot {0}'}"
                                WidthRequest="85"
                                HeightRequest="45"
                                HorizontalOptions="Start"
                                BackgroundColor="LightGoldenrodYellow"
                                VerticalOptions="Start"
                                Margin="0,20,0,20"
                                Command="{Binding Source={RelativeSource
                                            AncestorType={x:Type viewModels:MainViewModel}},
                                            Path=SetPlotSummaryCommand}"
                                CommandParameter="{Binding .}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </HorizontalStackLayout>
        <Button Text="Export"
                Grid.Row="0"
                Grid.Column="1"
                Command="{Binding ExportSummaryCommand}"
                Style="{StaticResource ButtonSummary}" />
        <CollectionView ItemsSource="{Binding SummaryItems}"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,20,0,0"
                        x:Name="collectionSummaryItems"
                        BackgroundColor="LightGrey"
                        HorizontalOptions="Center">
            <CollectionView.Header>
                <Grid ColumnDefinitions="300,100"
                      BackgroundColor="DarkGray">
                    <Label Text="Result Name"
                           Style="{StaticResource GridHeader}"
                           Grid.Column="0" />
                    <Label Text="Value"
                           Style="{StaticResource GridHeader}"
                           Grid.Column="1" />
                </Grid>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="300,100"
                          BackgroundColor="LightGrey">
                        <Label Grid.Column="0"
                               Text="{Binding DisplayName}"
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Start" />
                        <Label Grid.Column="1"
                               Text="{Binding DisplayValue}"
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <CollectionView ItemsSource="{Binding SpeciesSummary}"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="20,20,0,0"
                        x:Name="collectionSpeciesSummary"
                        BackgroundColor="LightGrey"
                        HorizontalOptions="Center">
            <CollectionView.Header>
                <Grid ColumnDefinitions="100,100,100"
                      BackgroundColor="DarkGray">
                    <Label Text="Plot Number"
                           Style="{StaticResource GridHeader}"
                           Grid.Column="0" />
                    <Label Text="Species"
                           Style="{StaticResource GridHeader}"
                           Grid.Column="1" />
                    <Label Text="Count"
                           Style="{StaticResource GridHeader}"
                           Grid.Column="2" />
                </Grid>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="100,100,100"
                          BackgroundColor="LightGrey">
                        <Label Grid.Column="0"
                               Text="{Binding PlotNumber}"
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center" />
                        <Label Grid.Column="1"
                               Text="{Binding Species}"
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center" />
                        <Label Grid.Column="2"
                               Text="{Binding Count}"
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>